{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Speculos",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/bin/app.elf",
      "miDebuggerServerAddress": "localhost:1234",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb-multiarch",
      "setupCommands": [
        { "text": "set architecture arm" },
        { "text": "handle SIGILL nostop pass noprint" },
        { "text": "add-symbol-file ${workspaceFolder}/bin/app.elf 0x40000000" },
        { "text": "b *0x40000000" },
        { "text": "c" }
      ],
      "preLaunchTask": "Start Speculos"
    }
  ]
}