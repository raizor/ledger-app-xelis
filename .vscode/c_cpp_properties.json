{
    "env": {
        "BOLOS_SDK": "/opt/ledger-secure-sdk"
    },
    "configurations": [
        {
            "name": "Nano S+",
            "includePath": [
                "${workspaceFolder}/src/**",
                "${env:BOLOS_SDK}/**",
                "${env:BOLOS_SDK}/include",          // SDK root headers
                "/usr/include",
                "/usr/lib/gcc/x86_64-linux-gnu/12/include", // adjust to match your GCC version
                "/usr/include/linux",
                "/usr/include/c++/12",                      // or whatever version you're using
                "/usr/include/x86_64-linux-gnu" 
            ],
            "defines": [
                "TARGET_NANOS2",
                "OS_IO_SEPROXYHAL",
                "HAVE_NBGL",
                "HAVE_SPRINTF",
                "HAVE_IO_USB",
                "HAVE_L4_USBLIB",
                "IO_USB_MAX_ENDPOINTS=6",
                "IO_HID_EP_LENGTH=64",
                "HAVE_USB_APDU",
                "USB_SEGMENT_SIZE=64",
                "UNUSED(x)=(void)x",
                "APPVERSION=\"1.0.0\"",
                "APPNAME=\"Boilerplate\"",
                "MAJOR_VERSION=1",
                "MINOR_VERSION=0",
                "PATCH_VERSION=0",
                "IO_SEPROXYHAL_BUFFER_SIZE_B=128",
                "DEBUG=1",
                "HAVE_PIEZO_SOUND",
                "HAVE_PRINTF",
                "PRINTF=screen_printf",
                "__STDC_LIMIT_MACROS",      
                "__STDC_CONSTANT_MACROS" 
            ],
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-arm",
            "browse": {
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            }
        }
    ],
    "version": 4
}
